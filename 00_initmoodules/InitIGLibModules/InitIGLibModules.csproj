  </Target>

  <ItemGroup>
    <None Update="InfoInitializationIGLibModules.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="echo .&#xD;&#xA;echo IGLib modules INITIALIZATION:&#xD;&#xA;echo Calling module updating scripts...&#xD;&#xA;echo .&#xD;&#xA;call &quot;$(ProjectDir)UpdateModule_IGLibCore.bat&quot;&#xD;&#xA;call &quot;$(ProjectDir)UpdateModule_IGLibEventAggregator&quot;&#xD;&#xA;echo .&#xD;&#xA;echo ... module update scripts completed.&#xD;&#xA;echo .&#xD;&#xA;" />
  </Target>

</Project>
